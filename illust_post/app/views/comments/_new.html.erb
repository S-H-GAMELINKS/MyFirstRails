<%= form_with(model: [ @illust, @comment ], remote: true) do |form| %>
    <div class="illust_rate"></div>
    Your Name :<br>
    <%= form.text_field :auther %><br>
    Your Comment:<br>
    <%= form.hidden_field :content, id: :illust_comments %>
    <trix-editor input="illust_comments"></trix-editor>
    <%= form.submit %>
<% end %>

<script>
$(function() {
    $('.illust_rate').raty({
        score: 5, 
        starType: 'i',
    })
})
</script>